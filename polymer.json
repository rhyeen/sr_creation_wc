{
  "entrypoint": "index.html",
  "shell": "src/sr-app.html",
  "fragments": [
    "src/account/sr-account-app.html",
    "src/page/sr-page-app.html",
    "src/page/sr-edit-page-content-view.html",
    "src/settings/sr-settings-app.html",
    "src/menu/sr-menu-app.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
